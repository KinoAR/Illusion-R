{
  "compilerOptions": {
    "declaration": false,
    "alwaysStrict": true,
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "bin",
    "pretty": true,
    "watch": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "howler",
      "express",
      "ramda",
      "bluebird",
      "pixi.js",
      "matter-js"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spects"
  ]
}